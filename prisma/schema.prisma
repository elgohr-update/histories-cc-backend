datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id        String   @id @unique @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    firstName String
    lastName  String?
    bio       String?
    username  String  @unique
    email     String  @unique
    newEmail  String? // new email address for verification when changing email

    googleId String? @unique
    password String

    verified Boolean @default(false)
    isAdmin  Boolean @default(false)

    posts Post[]


    profilePictureId String?
    profilePicture   Picture? @relation(fields: [profilePictureId], references: [id])
}

model Post {
    id        String   @id @unique @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    description String?

    authorId String
    author   User   @relation(fields: [authorId], references: [id])

    Place   Place?  @relation(fields: [placeId], references: [id])
    placeId String?
}

model Place {
    id        String   @id @unique @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    name        String
    description String?
    address     String?
    latitude    Float
    longitude   Float

    posts Post[]

    previewPictureId String?
    previewPicture   Picture? @relation(fields: [previewPictureId], references: [id])
}

model Picture {
    id        String   @id @unique @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    url      String
    blurhash String

    User  User[]
    Place Place[]
}
