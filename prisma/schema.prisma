datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id        String   @id @unique @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    firstName String
    lastName  String?
    bio       String?
    username  String  @unique
    email     String  @unique
    newEmail  String? // new email address for verification when changing email

    googleId String? @unique
    password String

    verified Boolean @default(false)
    isAdmin  Boolean @default(false)

    profilePictureId String?
    profilePicture   Picture? @relation(fields: [profilePictureId], references: [id])


    posts      Post[]
    sessions   Session[]
    Collection Collection[]
}

model Post {
    id        String   @id @unique @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    description String?

    authorId String
    author   User   @relation(fields: [authorId], references: [id])

    place   Place?  @relation(fields: [placeId], references: [id])
    placeId String?

    collections Collection[]
}

model Place {
    id        String   @id @unique @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    name        String
    description String?
    address     String?
    latitude    Float
    longitude   Float

    posts Post[]

    previewPictureId String?
    previewPicture   Picture? @relation(fields: [previewPictureId], references: [id])
}

model Picture {
    id        String   @id @unique @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt


    url      String
    blurhash String
    alt      String?

    user  User[]
    place Place[]
}

model Session {
    id        String   @id @unique @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    userId    String
    userAgent String?
    user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Collection {
    id        String   @id @unique @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    name        String?
    description String?
    authorId    String
    author      User    @relation(fields: [authorId], references: [id])

    posts Post[]
}
